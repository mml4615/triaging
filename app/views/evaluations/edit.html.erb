        </label>

        <input type="text" id="hospital_admissions" name="hospital_admissions" placeholder="Hospital admissions" class="form-control" value="<%= @evaluation.hospital_admissions %>">
      </div>

      <!-- Label and input for hallucinations -->
      <div class="form-group">
        <label for="hallucinations" class="control-label">
          Hallucinations
        </label>

        <input type="text" id="hallucinations" name="hallucinations" placeholder="Hallucinations" class="form-control" value="<%= @evaluation.hallucinations %>">
      </div>

      <!-- Label and input for disability -->
      <div class="form-group">
        <label for="disability" class="control-label">
          Disability
        </label>

        <input type="text" id="disability" name="disability" placeholder="Disability" class="form-control" value="<%= @evaluation.disability %>">
