        <label for="feeling" class="control-label">
          Feeling
        </label>

        <input type="text" id="feeling" name="feeling" placeholder="Feeling" class="form-control" value="<%= @evaluation.feeling %>">
      </div>

      <!-- Label and input for appointment_reason -->
