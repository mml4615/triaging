<!-- Validation failure messages -->
<% if @evaluation.errors.any? %>
  <% @evaluation.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Evaluation #<%= @evaluation.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_evaluation/<%= @evaluation.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @evaluation.user_id %>">
      </div>

      <!-- Label and input for prescription -->
      <div class="checkbox">
        <label for="prescription">
          <input type="checkbox" id="prescription" name="prescription" value="1" <%= "checked" if @evaluation.prescription %>>
          Prescription
        </label>
      </div>

      <!-- Label and input for alcohol_use -->
      <div class="form-group">
        <label for="alcohol_use" class="control-label">
          Alcohol use
        </label>

        <input type="text" id="alcohol_use" name="alcohol_use" placeholder="Alcohol use" class="form-control" value="<%= @evaluation.alcohol_use %>">
      </div>

      <!-- Label and input for drug_use -->
      <div class="checkbox">
        <label for="drug_use">
          <input type="checkbox" id="drug_use" name="drug_use" value="1" <%= "checked" if @evaluation.drug_use %>>
          Drug use
        </label>
      </div>

      <!-- Label and input for feeling -->
