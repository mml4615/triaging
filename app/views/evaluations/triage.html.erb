<div class="page-header">
  <h1>
    Prioritized Evaluations
  </h1>

  <h3> Print evaluation before deleting </h3>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>

        <th>First Name</th>
        <th>Last Name</th>
        <th>Answers</th>
        <th>Triage</th>
        <th>Waitime</th>
        <th>Appointment Scheduled</th>
      </tr>

      <% @evaluations.each do |evaluation| %>
      <tr>
        <td><%= evaluation.user.first_name %></td>
        <td><%= evaluation.user.last_name %></td>
        <td><a href="/evaluations/<%=evaluation.id %>">See answers</a></td>

        <td>
          <% if evaluation.thoughts_suicide_harm && evaluation.violent_behaviour && evaluation.attempted_suicide %>
          <a class="bg-danger">Risk of Danger to Self</a>
          <% elsif evaluation.thoughts_suicide_harm && evaluation.violent_behaviour  %>
          <a class="bg-warning">Possible Danger to Self</a>
          <% elsif evaluation.thoughts_suicide_harm && evaluation.violent_behaviour && evaluation.attempted_suicide %>
          <a class="bg-warning">Possible Danger to Self</a>
          <% else %>
          <a class="bg-success">Moderate Distress</a>
          <%end%>

      </td>

            <td>
              <%= time_ago_in_words( evaluation.created_at) %>
            </td>

            <td>
              <a href="/delete_evaluation/<%=evaluation.id %>">Delete</a>
            </td>

          </tr>


          <% end %>

        </table>
      </div>
    </div>
